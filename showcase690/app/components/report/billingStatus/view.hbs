                        - &nbsp;&nbsp;<input id="end" class="radiusCls" style="width:190px" onClick="WdatePicker({lang:'en',minDate:'#F{$dp.$D(\'begin\')}',dateFmt:'yyyy-MM-dd'})" readonly/></td>
                </tr>
            </table>
            <div id="toolbar">
                <div class="btn-group">
                    <a href="javascript:void(0)" class="btnStyle serchBtn" id="queryBtn">Query</a>
                    <a href="javascript:void(0)" class="btnStyle exportBtn" id="exportBtn">Export</a>
                    <a href="javascript:void(0)" class="btnStyle resetBtn" onclick="resetData(this)">Reset</a>
                </div>
            </div>
        </div>
        <div region="center" style="border:0px; overflow-y: hidden; margin-top: -2px;">
            <table id="stgDnDownGrid" style="width:120%;"></table>
        </div>
    </div>
    <script type="text/javascript">
    var totalWidth = $('#stgDnDownGrid').width(); 
    $(function(){  
    	if($.session.get("userName").toString().indexOf("admin")>=0){
            $("#postBilling").css("display","");
        }
    	$('#dndDiv').height(suitHeight);
        $('#doFlagP').combobox({
                data:[{"text":"ALL","value":"-1"},{"text":"UnDelivered","value":"0"},{"text":"Posting Success","value":"1"},{"text":"Posting Success Without Goods Delivery","value":"-2"}],
                value:'-1'
            });
        //初始化日期
        var date=new Date();
        var m=date.getMonth()+1;
        $('#begin').val(date.getFullYear()+"-"+( m< 10 ? '0' + m : m)+"-01");
        var d=date.getDate();
        date=date.getFullYear()+"-"+( m< 10 ? '0' + m : m)+"-"+( d< 10 ? '0' + d : d);
        $('#end').val(date);
        /**
         * 表格头部
         */
        var columns = [ [ {
            field : 'ck',
            checkbox : true,
            /* width : 80,*/
            width: fixWidth(0.01),
            align : 'center'
        }, {
            field : 'dnNo',
            title : 'Billing No',
            align : 'center',
            width: fixWidth(0.078),
            sortable : true
        }, {
            field : 'dnItemNo',
            title : 'Billing Item',
            align : 'center',
            width: fixWidth(0.074),
            sortable : true
        },{
            field : 'sellOrderType',
            title : 'Sale Type',
            align : 'center',
            width: fixWidth(0.072),
            sortable : true
        }, {
            field : 'qty',
            title : 'Qty',
            align : 'center',
            width: fixWidth(0.07),
            sortable : true
        }, {
            field : 'finishQty',
            title : 'Finish Qty',
            width: fixWidth(0.07),
            align : 'center',
            sortable : true,
            formatter: function(val,row){
            	/* if(row.qty>val&&val>0){
            		return "<font color='red'>"+val+"</font>";
            	}else if(row.qty==val&&val!=0){
            		return "<font color='green'>"+val+"</font>";
            	}
            	else{ */
            		return val;
            	/* } */
            },
            styler: function(value,row,index){
				if (row.qty>value&&value>0){
					return 'background-color:yellow;color:red;';
				}else if(row.qty==value&&value!=0){
					return 'background-color:green;';
				}
			}

        }, {
            field : 'unit',
            title : 'Unit ',
            align : 'center',
            width: fixWidth(0.05),
            sortable : true
        }, {
            field : 'materialNo',
            title : 'Material No',
            align : 'center',
            width: fixWidth(0.075),
            sortable : true
        } , {
            field : 'sapFlag1',
            title : 'Do Flag',
            align : 'center',
            sortable : true,
            /* width:250, */
            width: fixWidth(0.2),
            formatter: function(val,row){
                if(val=='1'){
                	if(row.qty>row.finishQty&&row.finishQty>0){
                		return "<font color ='green'>Posting Success And Processing now</font>";
                	}
                    return "<font color ='green'>Posting Success</font>";
                }else if(val=='2'){
                	if(row.qty>row.finishQty&&row.finishQty>0){
                		return "<font color ='green'>Posting Success And Processing now</font>";
                	}
                    return"<font color ='green'>Posting Success Without Goods Delivery</font>";
                }
                if(row.qty>row.finishQty&&row.finishQty>0){
            		return "<font color ='green'>Processing now</font>";
            	}
                return "<font color ='red'>Undelivery</font>";
                //return"<font color ='green'>Posting Success Without Goods Delivery</font>";
            }
        }, {
            field : 'customerModel',
            title : 'Customer Model',
            width: fixWidth(0.18),
            align : 'center',
            sortable : true
        }, {
            field : 'materialDesp',
            title : 'Material Description',
            align : 'center',
            hidden: true,
            sortable : true
        }, {
            field : 'plant',
            title : 'Plant',
            align : 'center',
            width: fixWidth(0.06),
            sortable : true
        }, {
            field : 'location',
            title : 'Location',
            align : 'center',
            width: fixWidth(0.06),
            sortable : true
        }, {
            field : 'customerNo',
            title : 'Customer No',
            align : 'center',
            width: fixWidth(0.082),
            sortable : true
        }, {
            field : 'customerName',
            title : 'Customer Name',
            width: fixWidth(0.18),
            align : 'center',
            sortable : true
        }, {
            field : 'deliveryCode',
            title : 'ShipTo Code',
            align : 'center',
            width: fixWidth(0.08),
            sortable : true
        }, {
            field : 'deliveryName',
            title : 'ShipTo Name',
            align : 'center',
            width: fixWidth(0.18),
            sortable : true
        }, {
            field : 'deliveryDate',
            title : 'Planned GI',
            align : 'center',
            width: fixWidth(0.08),
            sortable : true
        }, {
            field : 'sapFlag',
            title : 'sapFlag',
            align : 'center',
            sortable : true,
            hidden:true
        }, {
            field : 'dnCreateBy',
            title : 'Bill CreateBy',
            align : 'center',
            width: fixWidth(0.068),
            sortable : true
        }, {
            field : 'dnDocDate',
            title : 'Bill CreateDt',
            align : 'center',
            width: fixWidth(0.08),
            sortable : true
        }, {
            field : 'dnLastModifyDate',
            title : 'Bill ChangeDt',
            align : 'center',
            width: fixWidth(0.08),
            sortable : true
        }
        ] ];
        var grid = $('#stgDnDownGrid').datagrid({
            rownumbers:true,
            columns:columns,
            pagination:true,
            striped:true,
            pageNumber : 1,
			fit:true,
            url : '/order/searchDn',
            queryParams : {
                dnNo : $('#sellNo').val(),
                materialNo : $('#materialNo').val(),
                location: $('#locationP').val(),
                begin : $('#begin').val(),
                end : $('#end').val(),
                finishFlag : $('#doFlagP').combobox("getValue")
            },
            onLoadError:function(){
                 $.messager.alert('System Information','Network Abnormal!','warning');
            },
            onLoadSuccess:function(){
                 $(this).datagrid("fixRownumber");
            },
            method:'post'
        });
        
        initPagination(grid);
        gridScroll(grid);
        $('#queryBtn').on('click',function(){
            queryData();
        })
        $('#exportBtn').on('click',function(){
            exportData();
        })
    })
    
    // set width of column 
    function fixWidth(percent) { 
        return totalWidth * percent;   
    }
    
    function queryData(){
        var grid=$('#stgDnDownGrid').datagrid({
            url : '/order/searchDn',
            queryParams : {
                dnNo : $('#sellNo').val(),
                materialNo : $('#materialNo').val(),
                location: $('#locationP').val(),
                begin : $('#begin').val(),
                end : $('#end').val(),
                finishFlag : $('#doFlagP').combobox("getValue")
            },
            onLoadSuccess : function(data) {
                if (data.total == 0 && data.rows.length == 0) {
                    $.messager.alert('System Information',
                            'No records found.',
                            'warning');
                    gridScroll(grid);
                }
                $(this).datagrid("fixRownumber");
            },
            onLoadError:function(){
                 $.messager.alert('System Information','Network Abnormal!','warning');
            }
        });
        initPagination(grid);
    }
    function exportData(){

        /*var url = "/order/exportStgDnDown?a=1"
                + '&dnNo=' + $('#sellNo').val()
                + '&materialNo=' + $('#materialNo').val()
                + '&location=' + $('#locationP').val()
                + '&begin=' + $('#begin').val() + '&end='
                + $('#end').val() + '&finishFlag='
                + $('#doFlagP').combobox("getValue");
        window.location.href = url;*/
        
        $.ajax({
        	url:'/order/searchStgDnDownAmount',
        	type:'post',
        	dataType:'json',
        	data:{
        		dnNo:$('#sellNo').val(),
        		materialNo:$('#materialNo').val(),
        		location:$('#locationP').val(),
        		begin:$('#begin').val(),
        		end:$('#end').val(),
        		finishFlag:$('#doFlagP').combobox("getValue")
        	},
        	success:function(data) {
        		if (data == "success") {
        			var url = "/order/exportStgDnDown?a=1"
                        + '&dnNo=' + $('#sellNo').val()
                        + '&materialNo=' + $('#materialNo').val()
                        + '&location=' + $('#locationP').val()
                        + '&begin=' + $('#begin').val() + '&end='
                        + $('#end').val() + '&finishFlag='
                        + $('#doFlagP').combobox("getValue");
                window.location.href = url;
        		}else {
        			$.messager.alert('System Information',data,	'warning');
        		}
        	}
        });
    }
    function post() {
        var rows = $('#stgDnDownGrid').datagrid('getSelections');
        if (rows.length != 1) {
            $.messager.alert('System Information',
                    'Please select one data!', 'warning');
            return;
        }
        if (rows[0].sellOrderType != 'ZSO' && rows[0].sellOrderType!= 'ZFD' && rows[0].sellOrderType != 'ZFO') {
        	$.messager.alert('System Information',
        			'This Order Is Not Billing ,please Check!', 'warning');
            return;
        }
        if (rows[0].sapFlag == '1') {
            $.messager.alert('System Information',
                    'The order already post to SAP. Please select the order which has not post.', 'warning');
            return;
        }
        
      //loadMask($('#loading'), 'posting...');
        $.ajax({
            type:'post',
            dataType:'json',
            url:'/order/postDn',
            data:{
                dnNo:rows[0].dnNo,
                userName:$.session.get("userName")
            },
            success:function(data){
                if (data.status == 'S') {
                    $.messager
                            .alert(
                            'System Information',
                            'Posting Success!',
                            'warning');
                } else {
                    $.messager
                            .alert(
                            'System Information',
                            'Failed Posting ! '+data.msg,
                            'warning');
                }
                //unLoadMask($('#loading'));
                $('#stgDnDownGrid')
                        .datagrid('reload');
            },
            error: function() {
                //unLoadMask($('#loading'));
                $.messager
                        .alert(
                        'System Information',
                        'Network Abnormal!',
                        'warning');
            }
        });

    }
    </script>
